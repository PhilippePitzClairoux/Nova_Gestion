<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="nova.gestion.mappers.UserMapper">

    <resultMap id="UserMap" type="nova.gestion.model.User">
        <id column="id_user" javaType="int" property="idUser"/>
        <result column="email" javaType="string" property="email"/>
        <result column="password" javaType="string" property="password"/>
        <association column="id_user_type" property="typeUser" javaType="object"
                     select="nova.gestion.mappers.TypeUserMapper.getTypeUser"/>
        <association column="id_employee" property="employee" javaType="object"
                     select="nova.gestion.mappers.EmployeeMapper.getEmployee"/>
    </resultMap>

    <select id="getUser" parameterType="int" resultMap="UserMap">
        SELECT *
        FROM `nova_gestion`.`user`
        WHERE `nova_gestion`.`user`.id_user = #{idUser};
    </select>

</mapper>